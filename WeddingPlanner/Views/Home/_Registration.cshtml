@model User

<div>
    <h1>Register</h1>
    <form method="post" asp-controller="User" asp-action="Register">
        <div>
            <label asp-for="FirstName">First Name:</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" asp-for="FirstName">
        </div>
        <div>
            <label asp-for="LastName">Last Name:</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input type="text" asp-for="LastName">
        </div>
        <div>
            <label asp-for="EmailAddr">Email Address:</label>
            <span asp-validation-for="EmailAddr" class="text-danger"></span>
            <input type="text" asp-for="EmailAddr">
        </div>
        <div>
            <label asp-for="Password">Password:</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password">
        </div>
        <div>
            <label asp-for="ConfirmPWD">Confirm Password:</label>
            <span asp-validation-for="ConfirmPWD" class="text-danger"></span>
            <input type="password" asp-for="ConfirmPWD">
        </div>
        <input type="submit" value="Register">
    </form>
</div>
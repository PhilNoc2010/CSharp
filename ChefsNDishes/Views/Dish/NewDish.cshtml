@model Dish

<a asp-action="Index" asp-controller="Home">Chefs</a> | <a asp-action="Dishes" asp-controller="Home">Dishes</a> | <a asp-action="NewChef" asp-controller="Chef">Add Chef</a> | Add A Dish
<h1>Add a New Dish</h1>
<hr>
<div>
    <form asp-action="AddDish" asp-controller="Dish">
        <div>
            <label asp-for="Name">Dish Name:</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name">
        </div>
        <div>
            <label asp-for="Calories"># of Calories:</label>
            <span asp-validation-for="Calories" class="text-danger"></span>
            <input asp-for="Calories">
        </div>
        <div>
            <label for="ChefID">Chef Name</label>
            <select asp-for="ChefID">
                @foreach (Chef creator in ViewBag.AllChefs)
                {
                    <option value=@creator.ChefId>@creator.FirstName @creator.LastName</option>
                }
            </select>
        </div>
        <div>
            <label asp-for="Tastiness">Tastiness:</label>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <select name="Tastiness">
                @for(int i=1; i < 6; i++)
                {
                    <option value=@i>@i</option>
                }
            </select>
        </div>
        <input type="submit" value="Add Dish">
    </form>
</div>
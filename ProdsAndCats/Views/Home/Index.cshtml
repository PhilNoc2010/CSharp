@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>

<h1 class="display-4 text-center">Welcome</h1>
<h3 class="text-center"> Products | <a asp-action="CategoryPage" asp-controller="Home">Categories</a> </h3>
<div class="text-center d-flex justify-content-evenly">
    <div>
        @await Html.PartialAsync("../Product/_AddProduct",new Product())
    </div>
    <div>
        <h2> Available Products </h2>
        @foreach (Product item in Model)
        {
            <li><a asp-action="GetProduct" asp-controller="Product" asp-route-productID=@item.ProductID>@item.Name</a></li>
        }
    </div>
</div>

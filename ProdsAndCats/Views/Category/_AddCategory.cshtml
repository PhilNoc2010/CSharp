@model Category


<h2>New Category</h2>
<form asp-action="AddCategory" asp-controller="Category" method="post">
    <div>
        <Label asp-for="Name">Name:</Label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name">
    </div>
    <input type="submit" value="Create">
</form>
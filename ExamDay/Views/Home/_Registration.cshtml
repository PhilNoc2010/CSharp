@model User

<div>
    <h1>Register</h1>
    <form method="post" asp-controller="User" asp-action="Register">
        <div>
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input type="text" asp-for="UserName">
        </div>
        <div>
            <label asp-for="EmailAddr"></label>
            <span asp-validation-for="EmailAddr" class="text-danger"></span>
            <input type="text" asp-for="EmailAddr">
        </div>
        <div>
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password">
        </div>
        <div>
            <label asp-for="ConfirmPWD"></label>
            <span asp-validation-for="ConfirmPWD" class="text-danger"></span>
            <input type="password" asp-for="ConfirmPWD">
        </div>
        <input type="submit" value="Register">
    </form>
</div>
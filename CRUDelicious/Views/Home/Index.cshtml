@model List<Dish>
@{
    ViewData["Title"] = "CRUDelicious";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <p>Home | <a asp-action="NewDish" asp-controller="Dish">Add a Dish</a> </p>

    <div class="w-50 p-3">
    <p>Checkout some recently added dishes</p>
    <hr>
    @foreach (Dish dish in Model)
    {
        <p><a asp-action="GetDish" asp-controller="Dish" asp-route-dishID=@dish.DishID>@dish.Name</a>  by @dish.Chef</p>
    }
    </div>
</div>
